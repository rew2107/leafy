.modal.hide{:id=>"signup_modal", :tabindex=>"-1", :role=>"dialog", :'aria-labelledby'=>"myModalLabel", :'aria-hidden'=>"true"}
  .modal-header
    %button{:type=>"button", :class=>"close", :'data-dismiss'=>"modal", :'aria-hidden' => "true"}
      &times;
    %h3 Signup!
  .modal-body
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .control-group
        = f.label :email, {:class => 'control-label', :for => 'user_email'}
        .controls
          = f.email_field :email, :size => 45, :class => 'required email', :minlength => '2', :autofocus => true
      .control-group
        = f.label :password, {:class => 'control-label', :for => 'user_password'}
        .controls
          = f.password_field :password, :size => 45, :class => 'required', :minlength => '6'
      .control-group
        = f.label :password_confirmation, {:class => 'control-label', :for => 'user_password_confirmation'}
        .controls
          = f.password_field :password_confirmation, :size => 45, :class => 'required', :minlength => '6', :equalTo => "#user_password"
      = f.submit "Sign up", :class => 'btn btn-large btn-pink'


.modal.hide{:id=>"login_modal", :tabindex=>"-1", :role=>"dialog", :'aria-labelledby'=>"myModalLabel", :'aria-hidden'=>"true"}
  .modal-header
    %button{:type=>"button", :class=>"close", :'data-dismiss'=>"modal", :'aria-hidden' => "true"}
      &times;
    %h3 Login!
  .modal-body
    #email_signin
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .control-group
          = f.label :email, {:class => 'control-label', :for => 'login_user_email'}
          .controls
            = f.email_field :email, :size => 45, :class => 'required email', :minlength => '2', :id => 'login_user_email'
        .control-group
          = f.label :password, {:class => 'control-label', :for => 'login_user_password'}
          .controls
            = f.password_field :password, :size => 45, :class => 'required', :minlength => '6', :id => 'login_user_password'
        = f.submit "Log in", :class => 'btn btn-pink'
