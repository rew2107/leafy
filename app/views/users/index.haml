.row.center
  .well.fullspan
    .span12
      .span2half
        = image_tag @user.photo.url(:square), :class => 'img-polaroid'
        #self_star
      .span8
        %h2
          = @user.fullname || '?????'
          -if @user.country.present?
            %span#my_location.world_flag{:class=>"sprite-#{@user.country.flag}", :'data-toggle'=>"tooltip", :rel=> 'tooltip', :title=> @user.country.name}
        %p= @user.description
        %p
          =link_to 'Edit your profile', edit_user_registration_path, :class => 'btn btn-success'

