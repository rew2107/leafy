.row.center
  .span12.topbox.bottom100
    .row
      #user_pic.span2half.text-center
        = image_tag @user.photo.url(:larger), :class => 'img-circle'
        #self_star
      .span12
        %h2.intro
          Hi! I'm
          = @user.fullname || '?????'
          -if @user.country.present?
            %span#my_location.world_flag{:class=>"sprite-#{@user.country.flag}", :'data-toggle'=>"tooltip", :rel=> 'tooltip', :title=> @user.country.name}
    .row
      .span9.offset3
        %p
          =link_to 'Edit your profile', edit_user_registration_path, :class => 'btn btn-blue'
          =link_to 'Your requested makeup baskets', request_baskets_path, :class => 'btn btn-blue'

.row.top20
  .span12.favorites
    .black_seperate
    .lead
      ABOUT
      %span.redding ME
    =@user.description

.row.top20
  .span12.favorites
    .black_seperate
    .lead
      MY
      %span.redding BEAUTY ROUTINE
    =@user.routine

.row.top20
  .span12.favorites
    .black_seperate
    .lead.bottom50
      MY
      %span.redding BEAUTY BAG
    #locals= render 'show_favorites', :favorites => @user.local_favorites

.row.top20
  .span12.favorites
    .black_seperate
    .lead
      LOCAL
      %span.redding BEAUTY SECRETS
    =@user.secrets

.row.top20
  .span12
    .black_seperate
    .lead
      MY
      %span.redding REVIEWS

