
.text-center
  %h2 Forgot your password?

.text-center.top30
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    .row
      = devise_error_messages!

    .row
      = f.label :email
      = f.email_field :email, :autofocus => true

    .row.top30
      = f.submit "Send me reset password instructions", :class => 'btn btn-large btn-pink'

.text-center.top50= render "devise/shared/links"
