.row.center
  .well.fullspan
    .span3
      .pic
        =image_tag @shopping.requester.photo.url(:square), :class => 'img-polaroid'

    .span9
      %h2
        = "You are shopping this basket"
        -if @shopping.country.present?
          %span#request_location.world_flag{:class=>"sprite-#{@shopping.country.flag}", :'data-toggle'=>"tooltip", :rel=> 'tooltip', :title=> @shopping.country.name}

    .span9
      .row.lead
        .span7= "Estimated price of the basket: $#{@shopping.price}"
      .row.lead
        .span7= "#{pluralize(@shopping.requests.size, 'item')} in basket"
      .row.lead
        .span7= "Status: #{@shopping.status}"

.row
  .span12.skip_fullspan.basket

.lead Items requested:
.row.bottom20
  .span12
    - @shopping.requests.each do |req|
      .black_seperate
      .seperate.bottom10
      .row
        .span10.bottom20.shopping_link
          .media.row
            .span1half
              = image_tag req.photo.url(:square), :class => 'img-polaroid inline right30'
            .media-body.span8
              %h4.media-heading.redding
                = truncate(req.title, :length => 50, :separator => ' ')
                %span.small.muted= "$#{req.price}"

              .muted.inline= DateTime.parse(req.created_at.to_s).strftime('%b %-d %Y -')
              %span= truncate(req.description, :length => 250, :separator => ' ')

