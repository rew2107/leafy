.row.center
  .well.fullspan
    .span12
      .span2half
        #icon_container.img-polaroid
          #shopping_icon
      .span9
        %h2 Shopping
        %p Shop for requests to make cash money. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
        %p= link_to 'Shop Requests!', search_shoppings_path, :class => 'btn btn-success'

.row
  .span12.skip_fullspan

- {'in progress' => @in_progress_shoppings, 'completed' => @completed_shoppings}.each do |title,shoppings|
  .row.bottom20
    .span12
      .black_seperate
      .seperate.bottom10
      .lead 
        Your
        %span.redding= title
        shopping items
      - shoppings.each do |req|
        =link_to shopping_path(req) do
          .span5.bottom20.shopping_link
            .media.row
              .span1
                = image_tag req.photo.url(:thumb), :class => 'img-polaroid fav_photo inline right30'
              .media-body.span4
                %h4.media-heading.redding= truncate(req.title, :length => 25, :separator => ' ')
                .muted.inline= req.created_at.strftime('%b %-d %Y -')
                %span= truncate(req.description, :length => 70, :separator => ' ')

      .row
        .span2.fright.active_red
          - if title == 'in progress'
            =link_to 'see more...', in_progress_shoppings_path
          - elsif title == 'completed'
            =link_to 'see more...', completed_shoppings_path

