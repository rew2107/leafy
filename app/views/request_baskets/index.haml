.row.center
  .well.fullspan
    .span12
      .span2half
        #request_icon.img-polaroid
      .span9
        %h2 Request Items
        %p Not traveling to Paris for vacation? Don't have a friend coming back from Tokyo? Send a request to our sellers from your destination country of choice and have the goods you covet from far-away delivered to your door-step. Jet-set, go!
        %p= link_to 'Create new item basket!', new_request_basket_path, :class => 'btn btn-success'

.row
  .span12.skip_fullspan

- {'active' => @active_requests, 'in progress' => @in_progress_requests, 'completed' => @completed_requests}.each do |title,requests|
  .row.bottom20
    .span12
      .black_seperate
      .seperate.bottom10
      .lead 
        Your
        %span.redding= title
        requests
      - requests.each do |req|
        =link_to request_basket_path(req) do
          .span5.bottom20.request_link
            .media.row
              .span1
                = image_tag req.self_photo, :class => 'img-polaroid fav_photo inline right30'
              .media-body.span4
                %h4.media-heading.redding= truncate(req.title, :length => 25, :separator => ', ')
                .muted.inline= req.created_at.strftime('%b %-d %Y -')
                %span= truncate(req.description, :length => 70, :separator => ' ')

      .row
        .span2.fright.active_red
          - if title == 'active'
            =link_to 'see more...', active_request_baskets_path
          - elsif title == 'in progress'
            =link_to 'see more...', in_progress_request_baskets_path
          - elsif title == 'completed'
            =link_to 'see more...', completed_request_baskets_path

